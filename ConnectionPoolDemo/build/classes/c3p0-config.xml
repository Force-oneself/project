<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
	<default-config>
		<property name="jdbcUrl">jdbc:mysql://localhost:3306/connection_pool?useSSL=false&amp;serverTimezone=UTC
		</property>
		<property name="driverClass">com.mysql.cj.jdbc.Driver</property>
		<property name="user">root</property>
		<property name="password">he970801</property>
		<!-- 连接超时ms -->
		<property name="checkoutTimeout">30000</property>
		
		<property name="idleConnectionTestPeriod">30</property>
		<!-- 当数据库连接不足时向数据库请求的连接数量 -->
		<property name="acquireIncrement">5</property>
		<!-- 初始化数据库的连接数量 -->
		<property name="initialPoolSize">10</property>
		<!-- 数据库连接池中最小连接数 -->
		<property name="minPoolSize">5</property>
		<!-- 数据库连接池中最大连接数 -->
		<property name="maxPoolSize">100</property>
		<!-- c3p0数据库连接池同时可以维护的statement数量 -->
		<property name="maxStatements">2</property>
		<!-- 每次连接同时连接最大的statement数量 -->
		<property name="maxStatementsPerConnection">5</property>
	</default-config>
</c3p0-config> 